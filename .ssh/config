# ~/.ssh/config | vim: ft=sshconfig:

Host gh github github.com
	User git
	HostName github.com
	AddKeysToAgent yes

Host aur aur.archlinux.org
	HostName aur.archlinux.org
	User aur
	IdentityFile ~/.ssh/aur
	AddKeysToAgent yes


Host *.local *.local.lan *.fogg.house
	StrictHostKeyChecking accept-new
	ForwardAgent yes
	AddKeysToAgent yes

Host localhost
	StrictHostKeyChecking no
	ForwardAgent yes
	AddKeysToAgent yes


Host sidechain
	ForwardAgent yes
	User root
	IdentityFile ~/.ssh/sidechain_deploy
	RequestTTY yes


Host bp
  HostName beagleplay
  User debian
  ForwardAgent yes
  RequestTTY yes
  RemoteForward /run/user/1000/gnupg/S.gpg-agent /run/user/1000/gnupg/S.gpg-agent.extra
  RemoteForward /run/user/1000/gnupg/S.gpg-agent.extra /run/user/1000/gnupg/S.gpg-agent.extra


Host *
	User zfogg
	IdentityFile ~/.ssh/id_ed25519
	SendEnv LANG LC_*
	HashKnownHosts yes
	StrictHostKeyChecking accept-new
	ForwardAgent no
	AddKeysToAgent no
	ForwardX11 no
	Compression yes

	SendEnv TERM_PROGRAM

  # Disabled 1Password agent - it's hanging
  #IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
	#IdentityAgent ~/.1password/agent.sock

# ~/.ssh/config | vim: ft=sshconfig:

Host gh github github.com
	User git
	HostName github.com
	AddKeysToAgent yes

Host aur aur.archlinux.org
	HostName aur.archlinux.org
	User aur
	IdentityFile ~/.ssh/aur
	AddKeysToAgent yes


Host *.local *.local.lan *.fogg.house
	StrictHostKeyChecking accept-new
	ForwardAgent yes
	AddKeysToAgent yes
	RequestTTY yes

Host localhost
	StrictHostKeyChecking no
	ForwardAgent yes
	AddKeysToAgent yes
	RequestTTY yes

Host *.egret-sunfish.ts.net workbook-pro workbook-pro-gui beagleplay manjaro-twopal sidechain twopal zachbook-pro zphone-13-pro
	StrictHostKeyChecking accept-new
	ForwardAgent yes
	RequestTTY yes


Host beagleplay bp
  HostName beagleplay
  User debian
  RemoteForward 127.0.0.1:9999 /run/user/1000/gnupg/S.gpg-agent
  ForwardAgent yes
  RequestTTY yes

Host manjaro-twopal
  HostName manjaro-twopal.egret-sunfish.ts.net

Host sidechain
  HostName sidechain.egret-sunfish.ts.net
	User root
	IdentityFile ~/.ssh/sidechain_deploy

Host twopal
  HostName twopal.egret-sunfish.ts.net

Host workbook-pro-gui
  HostName workbook-pro-gui.egret-sunfish.ts.net

Host zachbook-pro
  HostName zachbook-pro.egret-sunfish.ts.net

Host pi5
  HostName pi5.egret-sunfish.ts.net
  RemoteForward 127.0.0.1:9999 /run/user/1000/gnupg/S.gpg-agent

Host pi
  HostName pi5
  User alarm
  ForwardAgent yes
  RemoteForward 127.0.0.1:9999 /run/user/1000/gnupg/S.gpg-agent
  RequestTTY yes


Host *
	User zfogg
	IdentityFile ~/.ssh/id_ed25519
	SendEnv LANG LC_*
	HashKnownHosts yes
	StrictHostKeyChecking accept-new
	ForwardAgent no
	RequestTTY no
	AddKeysToAgent no
	ForwardX11 no
	Compression yes

	SendEnv TERM_PROGRAM

  # Disabled 1Password agent - it's hanging
  #IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
	#IdentityAgent ~/.1password/agent.sock


# Enable SSH agent forwarding for workbook-pro
Host 192.168.1.190 workbook-pro
    ForwardAgent yes

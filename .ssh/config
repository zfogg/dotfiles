Host localhost
	StrictHostKeyChecking no
	ForwardAgent yes
	AddKeysToAgent yes


Host *
	User zfogg
	IdentityFile ~/.ssh/id_rsa
	SendEnv LANG LC_*
	HashKnownHosts yes
	StrictHostKeyChecking accept-new
	ForwardAgent no
	AddKeysToAgent no
	ForwardX11 no
	Compression yes

	SendEnv TERM_PROGRAM


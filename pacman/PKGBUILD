source=(
        'zfogg.conf')
sha256sums=(
    'e3b0c44298fc1c149afbf4c8996fb92427ae41e4649b934ca495991b7852b855')

package() {
    install -dm644           "${pkgdir}/etc/zfogg"
    install -m644 zfogg.conf "${pkgdir}/etc/zfogg"
}


function aliasof() {
  local a1=$(alias "$1")
  [[ $a1 == "" ]] && return 1
  echo "$a1" | \grep -qo "^${1}='.*'"
  [[ $? == "0" ]] \
    && echo "$a1" | \sed -E "s|^${1}='(.+)'$|\1|" \
    || echo "$a1" | \sed -E "s|^${1}=(.+)$|\1|"
}

function compdefas() {
  # INFO: https://unix.stackexchange.com/a/6340/99026
  local a
  a="$1"
  shift
  [[ -n $_comps[$a] ]] && compdef "$_comps[$a]" "${(@)*}=$a"
}


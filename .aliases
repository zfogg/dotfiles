# Claude Code
function claude() {
    if [ -f $HOME/.claude/local/claude ]; then
        local _claude="$HOME/.claude/local/claude"
    elif [ -f "$HOME/.local/bin/claude" ]; then
        local _claude="$HOME/.local/bin/claude"
    else
        local _claude=$(
            for dir in `echo $PATH | tr ':' '\n'`; do
                if [ -x "$dir/claude" ]; then
                    echo "$dir/claude"
                    break
                fi
            done
        )
    fi
    if [[ ! -v _claude ]] || [[ -z "$_claude" ]]; then
        >&2 echo "â€¼ï¸ Couldn't find a local claude"
        return 252833 # "claude" on a phone dial pad
    fi

    if [[ -v RIPGREP_CONFIG_PATH ]]; then
        local _old_ripgrep_config_path="$RIPGREP_CONFIG_PATH"
        unset RIPGREP_CONFIG_PATH
    fi

    unalias cp 2>/dev/null || true
    unalias rm 2>/dev/null || true
    unalias mv 2>/dev/null || true
    unalias tree 2>/dev/null || true

    export _CLAUDECODE=1
    $_claude "$@"
    unset _CLAUDECODE

    alias_file_handling
    alias_tree

    if [[ -v _old_ripgrep_config_path ]]; then
        export RIPGREP_CONFIG_PATH="$_old_ripgrep_config_path"
    fi
}
alias clauded="claude --dangerously-skip-permissions"



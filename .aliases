function _alias_tree() {
  #-D -c \
  local gitignore="$HOME/.config/git/ignore"
  if [[ -f $gitignore ]];
  then local ignores=$(cat "$gitignore" | grep -v '^$' | tr '\n' '|' | sed 's/|$//')
  else local ignores='node_modules|bower_components|vendor|bundle|target|build|public|.git|env'; fi
  command tree \
    --du \
    --filelimit 512 \
    --prune \
    -F -L 4 \
    -h \
    -I "$ignores" \
    "$@"
}

function alias_tree() {
    alias tree='_alias_tree --du --si --filelimit 512 -I "node_modules|bower_components|vendor|bundle|target|build|public|.git|env|__pycache__" -L 5'
}
alias_tree


# grc
if command -v grc >/dev/null 2>&1; then
  # Get list of commands from grc config files
  if [ -d '/usr/share/grc' ]; then
    local grc_dir="/usr/share/grc"
  elif [ -d '/usr/local/share/grc' ]; then
    local grc_dir="/usr/share/grc"
  else
    local grc_dir="${BREW}/share/grc"
  fi
  if [[ -d "$grc_dir" ]]; then
    # Extract command names from conf.* files
    for conf_file in "$grc_dir"/conf.*; do
      [[ -f "$conf_file" ]] || continue
      local cmd="${conf_file##*/conf.}"
      # Skip yaml and other non-command files
      [[ "$cmd" == "yaml" ]] && continue
      # Create function if command exists and doesn't already have an alias
      if (( $+commands[$cmd] )) && ! alias $cmd >/dev/null 2>&1 && ! typeset -f $cmd >/dev/null 2>&1; then
        eval "$cmd() { grc --colour=auto \${commands[$cmd]} \"\$@\" }"
      fi
    done
  fi

  # Handle commands that may already have aliases
  colourify='grc -es --colour=auto'
  alias colourify="$colourify"
  # du, ls, and ping are handled separately as aliases
fi


function ghq-get() {
  local x="$(
    if [[ ${OSX:-0} == ${TRUE:-1} ]]; then
      pbpaste
    elif [[ ${LINUX:-0} == ${TRUE:-1} ]]; then
      xclip -out
    fi)"
  ghq get -u -p --shallow "$x" 1>&2
  echo "$(ghq root)/$(ghq list "$x")"
}
alias get='cd "$(ghq-get)"'


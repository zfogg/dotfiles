[user]
    email = me@zfo.gg
    name  = Zachary Fogg

[core]
    editor       = $EDITOR
    pager        = $PAGER
    ;pager = diff-so-fancy | less --tabs=4 -RFX
    eol          = lf
    autocrlf     = input
    excludesfile = ~/.config/git/ignore
    safecrlf = false
[push]
    default = simple

[color]
    diff        = auto
    status      = auto
    branch      = auto
    interactive = auto
    ui          = auto
    pager       = true

[fetch]
    prune     = true
    pruneTags = true
    output    = compact

[log]
    decorate     = true
    abbrevCommit = true

[grep]
    lineNumber = true

[merge]
    tool = vimdiff
[mergetool]
    prompt        = true
    keepBackup    = false
[mergetool "vimdiff"]
    ;cmd           = $EDITOR -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
    ;cmd           = nvim -f -c \"Gdiff\" \"$MERGED\"
    cmd            = $EDITOR -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
    trustExitCode  = true

[diff]
    tool = vimdiff3
[difftool "vimdiff3"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
    trustExitCode = true
[difftool "vimdiff"]
    ;cmd = \"$EDITOR\" -d \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c  'set ft=git' -c '$wincmd w' -c 'wincmd J'
    trustExitCode = true


[alias]
    submsync = submodule foreach \"git checkout master && git pull origin master\"
    mybranch = rev-parse --abbrev-ref HEAD
    up       = pull --rebase --autostash
    gh       = joopal-clone git github.com

    l        = log -18 --all --topo-order
    ll       = log     --all --topo-order
    gl       = log -12 --all --graph --topo-order
    gll      = log     --all --graph --topo-order

    unshallow = "!:; \
    git fetch --unshallow 2>/dev/null; \
    git config remote.origin.fetch '+refs/heads/*:refs/remotes/origin/*'; \
    git fetch -v origin; "

    pruner = "!:; \
    git prune --expire=now; \
    git reflog expire --expire-unreachable=now --rewrite --all; "

    fetch-branch = "!:; \
    git remote set-branches --add origin $1; \
    git fetch -v origin $1:$1; "


[ghq "https://bitbucket.org/"]
    vcs = git

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[filter "media"]
    clean  = git-media-clean %f
    smudge = git-media-smudge %f

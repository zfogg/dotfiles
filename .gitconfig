[user]
    email = zach.fogg@gmail.com
    name = Zach Fogg

[alias]
    gh = !sh -c 'git clone git@github.com:$1' -
    submclean = !git submodule foreach "git reset --hard"
    submsync = !git submodule foreach "git checkout master && git pull origin master"

[push]
    default = upstream

[core]
    editor = vim
    pager = vimpager
    eol = lf
    autocrlf = input

[diff]
    tool = vimdiff

[merge]
    tool = vimdiff
    conflictstyle = diff3

[color]
    ui = true

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f


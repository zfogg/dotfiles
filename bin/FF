#!/bin/bash


sack__vim_shortcut=$(sed -n "$1p" < /Users/zfogg/.sack_shortcuts | perl -pe 's/\e\[?.*?[\@-~]//g')

sack__vim_line=$(echo "$sack__vim_shortcut" | grep --color=never -o '^\d\+')

sack__vim_file=$(echo "${sack__vim_shortcut#$sack__vim_line}" | sed 's/^\[[:space:]]*//' | sed 's/\[[:space:]]*$//')


vim +$sack__vim_line $sack__vim_file -c 'normal zz'


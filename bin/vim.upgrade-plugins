#!/usr/bin/env zsh -e


source ~/.zsh/site-functions/bin-abort
trap 'bin-abort' ERR


source ~/.aliases
eval "`pyenv init -`"
cd ~/.vim

for pip in gpip2 gpip3; \
    "$pip" install -Ur "`pyenv root`"/global-packages


$EDITOR +PlugUpgrade +qall
$EDITOR +PlugClean +PlugInstall +qall
$EDITOR +PlugUpdate
